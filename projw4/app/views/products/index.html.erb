<section class="jumbotron text-center" >
    <div class="container">
<h3>Stock in our store</h3>
 <% if @products.blank? %>
 <em> No stock available</em>

 <%else%> 
<%= link_to "Home", "/welcome/index/" %>
 

 
<table>
  <tr>
    <th class="text-center">Units</th>
    <th class="text-center">Product</th>
    
   
    <th class="text-center">Discount </th>
     <th>        </th>
      <th class="text-center" >Price </th>
    

  </tr>
</section>
</div>
 <tbody>
 <div class="card-body">
  <% @products.each do |product| %>
    <tr>
      <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
          <td><%= product.quantity %></td>
          <td><%= product.item %></td>
        
          <td><%= product.discount %></td>
          <td><%= product.onclearance%></td>
        
          <td><%= number_to_currency(product.priced) %></td>
          <td>
          <%= link_to "Details", "/products/#{product.id}" %></td>
      </div>
      </div>
    </tr>
  <%end %>
  </tbody>
  </div>

</table>
<%end %>